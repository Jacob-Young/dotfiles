[include]
  path = ~/.gitconfig.active
[includeIf "gitdir:~/go/src/git.zoom.us/"]
  path = ~/.gitconfig.zed
[includeIf "gitdir:~/code/professional/zigg/"]
  path = ~/.gitconfig.zigg
[gpg]
  program = gpg
[commit]
  gpgsign = true
[core]
  editor = lvim
  excludesfile = ~/.gitignore
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[credential]
  helper = osxkeychain
[push]
  default = simple
[pull]
  rebase = true
[alias]
  showtool = "!f() { git difftool $1^ $1; }; f"
  added = difftool --cached
  commit = git commit -v
[diff]
  tool = icdiff
[difftool]
  prompt = false
[pager]
  difftool = true
[url "git@git.zoom.us:"]
	insteadOf = https://git.zoom.us
[url "git@github.com:"]
	insteadOf = https://github.com/
