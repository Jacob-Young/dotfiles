[core]
	editor = nvim
	excludesfile = ~/.gitignore
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[credential]
	helper = osxkeychain
[push]
	defualt = simple
[alias]
  showtool = "!f() { git difftool $1^ $1; }; f"
  added = difftool --cached
  commit = git commit -v
[diff]
  tool = icdiff
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
[pager]
  difftool = true
