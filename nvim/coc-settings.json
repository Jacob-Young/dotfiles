{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "hoverKind": "FullDocumentation",
        "env": {
          "GO111MODULE": "auto"
        }
      }
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "trace.server": "off",
      "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
      "settings": {
        "purescript": {
          "addSpagoSources": true,
          "addNpmPath": true // Set to true if using a local purty install for formatting
        }
      }
    }
  },
  "coc.preferences.enableFloatHighlight": true,
  // IMPORTANT - Have to add file types here otherwise they will not be formatted on save (use their default formatter)
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "go",
    "rust",
    "c",
    "cpp",
    "purescript"
  ],
  "diagnostic.errorSign": "✗",
  "diagnostic.infoSign": "ℹ️",
  "diagnostic.messageTarget": "float",
  "diagnostic.virtualText": true,
  "diagnostic.warningSign": "▲",
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "git.addGBlameToVirtualText": true,
  "json.format.enable": false,
  "rust-analyzer.diagnostics.enable": true,
  "rust-analyzer.trace.server": "verbose",
  "rust-analyzer.updates.channel": "nightly",
  "signature.target": "float",
  "suggest.floatEnable": true,
  "tsserver.trace.server": "verbose"
}
