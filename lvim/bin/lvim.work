#!/bin/sh

export LUNARVIM_RUNTIME_DIR="${LUNARVIM_RUNTIME_DIR:-"/Users/bigbrother/.local/share/lunarvim"}"
export LUNARVIM_CONFIG_DIR="${LUNARVIM_CONFIG_DIR:-"/Users/bigbrother/.config/lvim"}"
export LUNARVIM_CACHE_DIR="${LUNARVIM_CACHE_DIR:-"/Users/bigbrother/.cache/lvim"}"

export LVIMRC="${LUNARVIM_CONFIG_DIR}/config.lua"

exec nvim -u "$LUNARVIM_RUNTIME_DIR/lvim/init.lua" -c ":LvimReload" "$@"
